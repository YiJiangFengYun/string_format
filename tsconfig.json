{
    "compilerOptions": {
        "lib": ["es2018"],
        "outDir": "./build/",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "target": "es5"
    },
    "include": [
        "./src/**/*"
    ]
}